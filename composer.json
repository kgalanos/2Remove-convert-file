{
    "name": "kgalanos/convert-file",
    "description": "This is my package convert-file",
    "keywords": [
        "kgalanos",
        "convert-file"
    ],
    "homepage": "https://github.com/kgalanos/convert-file",
    "license": "MIT",
    "authors": [
        {
            "name": "Kostas Galanos",
            "email": "kigalanos@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Kgalanos\\ConvertFile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kgalanos\\ConvertFile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
